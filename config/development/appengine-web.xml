<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">

    <application>rummikub-game</application>
    <version>1</version>

    <public-root>/public</public-root>
    <sessions-enabled>true</sessions-enabled>
    <threadsafe>true</threadsafe>

    <system-properties>
        <property name="joodo.env" value="development"/>
        <property name="joodo.core.namespace" value="rummikub.core"/>
        <property name="joodo.ignore.config" value="true"/>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

</appengine-web-app>
